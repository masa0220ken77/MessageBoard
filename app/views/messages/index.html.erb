<h1>メッセージ一覧</h1>

<% if @messages.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>タイトル</th>
        <th>メッセージ</th>
      </tr>
    </thead>
  <ul>
    <% @messages.each do |message| %>
      <li><%= link_to message.id, message %>：<%= message.title %> &gt; <%= message.content %> &gt; <%= message.status %></li>
    <% end %>
  </ul>
  
  <%= paginate @messages %>
  
  <%= link_to '新しいメッセージの投稿', new_message_path %>